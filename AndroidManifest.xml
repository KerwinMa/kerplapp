<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.binaryparadox.kerplapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="false"
        android:name="net.binaryparadox.kerplapp.KerplappApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="net.binaryparadox.kerplapp.KerplappActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
           Set up PackageReceiver class to capture PACKAGE_ADDED & 
           PACKAGE_REPLACED intents generated by system
        -->
        <receiver android:name="net.binaryparadox.kerplapp.PackageReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <activity
            android:name="net.binaryparadox.kerplapp.AppSelectActivity"
            android:label="@string/title_activity_app_select"
            android:parentActivityName="net.binaryparadox.kerplapp.KerplappActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.binaryparadox.kerplapp.KerplappActivity" />
        </activity>
    </application>

</manifest>
